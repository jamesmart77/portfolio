{
  "name": "portfolio",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "react-scripts": "2.1.3"
  },"devDependencies": {
    "node-sass-chokidar": "^1.3.4"
  },
  "scripts": {
    "build-css": "node-sass-chokidar src/styles/_index.scss -o src/styles/index.scss",
    "start": "yarn build-css && react-scripts start",
    "build": "yarn build-css && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "heroku-postbuild": "yarn install && yarn install --only=dev --no-shrinkwrap && yarn run build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all" 
  ]
}
